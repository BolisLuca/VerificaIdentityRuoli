@page
@model WebApp1.Pages.EditModel
@{
}

<div id="CreateModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="POST" action="">
                <div class="modal-header">
                    <h4 class="modal-title">Modifica Modello</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <label>pkModello</label>
                        <textarea class="form-control" asp-for="modello.pkModello" required readonly></textarea>
                        <span asp-validation-for="modello.pkModello" class="alert"></span>
                    </div>
                    <div class="form-group">
                        <label>Nome</label>
                        <textarea class="form-control" asp-for="modello.NomeModello" required></textarea>
                        <span asp-validation-for="modello.NomeModello" class="alert"></span>
                    </div>
                    <div class="form-group">
                        <label>Data di nascita</label>
                        <input type="date" asp-for="modello.DataNascita" class="form-control" required>
                        <span asp-validation-for="modello.DataNascita" class="alert"></span>
                    </div>
                    <div class="form-group">
                        <label>Nazionalità</label>
                        <textarea class="form-control" asp-for="modello.NazioneModello" required></textarea>
                        <span asp-validation-for="modello.NazioneModello" class="alert"></span>
                    </div>
                    <div class="form-group">
                        <label>email</label>
                        <textarea class="form-control" asp-for="modello.emailModello" required></textarea>
                        <span asp-validation-for="modello.emailModello" class="alert"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                    <input type="submit" name="savechanges" class="btn btn-info" value="Save">
                </div>
            </form>



        </div>
    </div>
</div>